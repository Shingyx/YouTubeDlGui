<?xml version="1.0" encoding="UTF-8"?>

<?import com.github.shingyx.youtubedlgui.ProgressBarTableCellFactory?>
<?import com.github.shingyx.youtubedlgui.RightAlignTableCellFactory?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.github.shingyx.youtubedlgui.MainController">
    <padding>
        <Insets topRightBottomLeft="10.0"/>
    </padding>
    <HBox alignment="CENTER_RIGHT">
        <Button mnemonicParsing="false" onAction="#openConfiguration" text="Configure">
            <font>
                <Font size="10.0"/>
            </font>
        </Button>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Label text="Video URL:"/>
        <TextField fx:id="urlField" prefWidth="600.0" HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" onAction="#pasteUrl" text="Paste URL"/>
    </HBox>
    <Button defaultButton="true" mnemonicParsing="false" onAction="#startDownload" text="Start"/>
    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn text="Video">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Progress">
                <cellValueFactory>
                    <PropertyValueFactory property="progress"/>
                </cellValueFactory>
                <cellFactory>
                    <ProgressBarTableCellFactory/>
                </cellFactory>
            </TableColumn>
            <TableColumn text="Status">
                <cellValueFactory>
                    <PropertyValueFactory property="message"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Speed">
                <cellValueFactory>
                    <PropertyValueFactory property="speed"/>
                </cellValueFactory>
                <cellFactory>
                    <RightAlignTableCellFactory/>
                </cellFactory>
            </TableColumn>
            <TableColumn text="ETA">
                <cellValueFactory>
                    <PropertyValueFactory property="eta"/>
                </cellValueFactory>
                <cellFactory>
                    <RightAlignTableCellFactory/>
                </cellFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
